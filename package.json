    "@elastic/elasticsearch": "^9.1.1",
    "@heloyom/shared-develope-tools": "0.0.22",
    "amqplib": "^0.10.8",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "email-templates": "^12.0.3",
    "express": "^4.16.2",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "nodemailer": "^7.0.5",
    "pino-pretty": "^13.1.1",
    "shelljs": "^0.10.0",
    "typescript": "^5.9.2",
    "typescript-transform-paths": "^3.5.5",
    "winston": "^3.17.0"
  }
